{
	"name": "@flight-booking/server",
	"version": "1.0.0",
	"description": "Backend server for flight booking application",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/db/migrate.ts",
		"db:seed": "tsx src/db/seed.ts",
		"db:reset": "tsx src/db/reset.ts",
		"db:test": "tsx src/db/test-connection.ts",
		"db:studio": "drizzle-kit studio",
		"clean": "rm -rf dist",
		"lint": "echo 'No linting configured yet'",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@flight-booking/shared": "workspace:*",
		"express": "^4.21.2",
		"helmet": "^8.0.0",
		"cors": "^2.8.5",
		"morgan": "^1.10.0",
		"compression": "^1.7.5",
		"express-rate-limit": "^7.4.1",
		"jsonwebtoken": "^9.0.2",
		"bcryptjs": "^2.4.3",
		"zod": "^3.24.1",
		"drizzle-orm": "^0.37.0",
		"postgres": "^3.4.5",
		"dotenv": "^16.4.7",
		"@paralleldrive/cuid2": "^2.2.2"
	},
	"devDependencies": {
		"@types/express": "^5.0.0",
		"@types/cors": "^2.8.17",
		"@types/morgan": "^1.9.9",
		"@types/compression": "^1.7.5",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^22.10.2",
		"typescript": "^5.7.3",
		"tsx": "^4.19.2",
		"drizzle-kit": "^0.30.0",
		"vitest": "^2.1.8",
		"@vitest/coverage-v8": "^2.1.8",
		"supertest": "^7.0.0",
		"@types/supertest": "^6.0.2"
	}
}
