{
	"name": "flight-booking",
	"version": "1.0.0",
	"description": "This is a demo project showcasing fullstack development",
	"author": {
		"name": "Yun Wang",
		"email": "me@mogita.com"
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "pnpm --parallel --filter \"./packages/*\" dev",
		"dev:web": "pnpm --filter \"./packages/web\" dev",
		"dev:server": "pnpm --filter \"./packages/server\" dev",
		"build": "pnpm --recursive --filter \"./packages/*\" build",
		"build:web": "pnpm --filter \"./packages/web\" build",
		"build:server": "pnpm --filter \"./packages/server\" build",
		"start": "pnpm --parallel --filter \"./packages/*\" start",
		"lint": "pnpm --recursive --filter \"./packages/*\" lint",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"clean": "pnpm --recursive --filter \"./packages/*\" clean",
		"test": "pnpm --recursive --filter \"./packages/*\" test:run",
		"test:web": "pnpm --filter \"./packages/web\" test:run",
		"test:server": "pnpm --filter \"./packages/server\" test:run"
	},
	"license": "MIT",
	"packageManager": "pnpm@10.6.3",
	"devDependencies": {
		"@biomejs/biome": "2.1.4"
	}
}
